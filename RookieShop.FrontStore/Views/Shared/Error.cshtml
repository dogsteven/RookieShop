@using RookieShop.FrontStore.Exceptions
@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<section class="bg-gray-50 py-8 antialiased dark:bg-gray-900 md:py-12">
    <div class="mx-auto max-w-screen-xl px-4 2xl:px-0">
        <div class="mb-4 items-end justify-between space-y-4 sm:flex sm:space-y-0 md:mb-8">
            <div>
                <h2 class="mt-3 text-xl font-semibold text-gray-900 dark:text-white sm:text-2xl">Errors</h2>
            </div>
        </div>
        
        <div>
            @if (Model.Exception is ProblemDetailsException problemDetailsException)
            {
                var problemDetails = problemDetailsException.ProblemDetails;
                
                <h3 class="mt-3 text-md text-gray-500 dark:text-white">@problemDetails.Title</h3>
                <h3 class="mt-3 text-md text-gray-500 dark:text-white">@problemDetails.Detail</h3>
            }
            else
            {
                <h3 class="mt-3 text-md text-gray-500 dark:text-white">@Model.Exception.Message</h3>
            }
        </div>
    </div>
</section>